{
  "name": "inspire-graphics",
  "version": "1.0.0",
  "description": "Full-stack portfolio website for Inspire Graphics design business",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
